@page
@model Contacts_upstack.Pages.Persons.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Contacts </h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Contact</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].Phone)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Person) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a> 
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
